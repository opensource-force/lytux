set nocompatible
set nobackup
set showmode

set belloff=all

filetype on
filetype plugin on
filetype indent on
syntax on

set termguicolors
colorscheme catppuccin_mocha

set scrolloff=10
set cursorline
set cursorcolumn

set nowrap
set autoindent
set expandtab
set tabstop=2
set softtabstop=2
set shiftwidth=2

set hlsearch
set incsearch
set ignorecase
